#include<stdio.h>
#define max 100

void nhap(int a[max][max], int m, int n)
{
    for(int i=0; i<m; i++) {
        for (int j=0; j<n; j++) {
            printf("[%d][%d]=", i, j);
            scanf("%d", &a[i][j]);
        }
    }
}

void in(int a[max][max], int m, int n) {
    for(int i=0; i<m; i++) {
        for (int j=0; j<n; j++) {
            printf("%3d", a[i][j]);
        }
        printf("\n");
    }
}

int main() 
{
    int A[max][max], B[max][max], C[max][max];
    int m1, n1, m2, n2;
    do {
        printf("Nhap so hang mt1: "); scanf("%d", &m1);
        printf("Nhap so cot mt1: "); scanf("%d", &n1);
        printf("Nhap so hang mt2: "); scanf("%d", &m2);
        printf("Nhap so cot mt2: "); scanf("%d", &n2);
        if (m1!=m2||n1!=n2) printf ("khong the cong, nhap lai:\n");
    }
    while (m1!=m2||n1!=n2);
    printf("Nhap mt1:\n");
    nhap(A, m1, n1);
    printf("Nhap mt2:\n");
    nhap(B, m1, n1);
    for (int i=0; i<m1; i++) {
        for (int j=0; j<n1; j++) {
            C[i][j]=A[i][j]+B[i][j];
        }
    }
    printf("Mt1:\n");
    in(A, m1, n1);
    printf("Mt2:\n");
    in(B, m1, n1);
    printf("Mang tong la: \n");
    in(C, m1, n1);
    return 0;
    
}
