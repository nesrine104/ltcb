#include<stdio.h>

void doics(int n, int a)
{
    if (a==2||a==8){
        if (n<a) printf("%d", n);
        else {
            doics(n/a, a);
            printf("%d", n%a);
        }
    }
    else {
        if (n<16) {
            if (n<10) printf("%d", n);
            else printf("%c", 55+n);
        }
        else {
            doics(n/a, a);
            int r=n%a;
            if (r<16) {
                if (r<10) printf("%d", r);
                else printf("%c", 55+r);
            }
        }
    }
}

int main()
{
    int n, a;
    printf("Nhap n:");
    scanf("%d", &n);
    printf("Chuyen theo co so 2: ");
    doics(n, 2);
    printf("\nChuyen theo co so 8: ");
    doics(n, 8);
    printf("\nChuyen theo co so 16: ");
    doics(n, 16);
    return 0;
}
