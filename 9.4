#include<stdio.h>

void in(int n, int a[100], int *p)
{
    for(int i=0; i<n; i++) {
        printf("%2d", *(p+i));
    }
}

void sort(int a[100],int n, int *p)
{
    int temp=a[0];
    for(int i=0; i<n-1; i++){
        for(int j=i+1; j<n; j++){
            if (a[i]>a[j]) {
                temp=*(p+i);
                *(p+i)=*(p+j);
                *(p+j)=temp;
            }
        }
    }
}

int main()
{
    int a[100], n;
    int *p;
    printf("Nhap so phan tu: ");
    scanf("%d", &n);
    for(int i=0; i<n; i++) {
        printf("a[%d]=", i);
        scanf("%d", a + i);
    }
    p=a;
    printf("Mang da cho la:");
    in(n, a, p);
    printf("\n");
    sort(a, n, p);
    printf("Mang sau khi sap xep la: ");
    in(n, a, p);
    return 0;
}
