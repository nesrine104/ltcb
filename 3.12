#include<stdio.h>
#include<math.h>

int main()
{
    int x;
    float esp;
    printf("nhap x: ");
    scanf("%d",&x);
    printf("nhap do chinh xac: ");
    scanf("%f", &esp);
    int i, k;
    float sin, n;
    do 
    {
        int k =1;
        for (int j=1; j<=2*i+1; j++) {
            k*=j;
        }
        n = (float)pow(-1, i)*pow(x, 2*i+1)/k;
        sin+=n;
        i++;
    }
    while (fabs(n)>esp);
    printf("sin(%d)=%f", x, sin);
    return 0;
}
