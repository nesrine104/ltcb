#include<stdio.h>
#define max 100

int main()
{
    int a[max][max], b[max][max], c[max][max];
    int m1, n1, m2, n2;
    do {
        printf("Nhap so hang cua mt 1: ");
        scanf("%d", &m1);
        printf("Nhap so cot cua mt 1: ");
        scanf("%d", &n1);
        printf("Nhap so hang cua mt 2: ");
        scanf("%d", &m2);
        printf("Nhap so cot cua mt 2: ");
        scanf("%d", &n2);
        if (m1!=m2||n1!=n2) printf("Hai ma tran khong cung kich thuoc, moi nhap lai:\n");
    }
    while(m1!=m2||n1!=n2);
    for(int i=0; i<m1; i++) {
        for (int j=0; j<n1; j++) {
            printf("a[%d][%d]=", i, j);
            scanf("%d", &a[i][j]);
        }
    }
    for(int i=0; i<m2; i++) {
        for (int j=0; j<n2; j++) {
            printf("b[%d][%d]=", i, j);
            scanf("%d", &b[i][j]);
        }
    }
    for (int i=0; i<m1; i++) {
        for (int j=0; j<n1; j++) {
            c[i][j]=a[i][j]+b[i][j];
        }
    }
    printf("Mang a la: \n");
    for(int i=0; i<m1; i++) {
        for (int j=0; j<n1; j++) {
            printf("%5d", a[i][j]);
        }
        printf("\n");
    }
    printf("Mang b la: \n");
    for(int i=0; i<m1; i++) {
        for (int j=0; j<n1; j++) {
            printf("%5d", b[i][j]);
        }
        printf("\n");
    }
    printf("Mang tong la: \n");
    for(int i=0; i<m1; i++) {
        for (int j=0; j<n1; j++) {
            printf("%5d", c[i][j]);
        }
        printf("\n");
    }
    return 0;
}
