#include<stdio.h>
void inp(int a[10])
{
    for(int i=0; i<10; i++) {
        printf("a[%d]=", i);
        scanf("%d", a + i);
    }
}
void outp(int a[10], int *p) {
    for(int i=0; i<10; i++) {
        printf("%3d", *(p+i));
    }
}
int main()
{
    int arr[10];
    inp(arr);
    printf("Mang da nhap la: ");
    int *p;
    p=arr;
    outp(arr, p);
    return 0;
}
