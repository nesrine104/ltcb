int main()
{
    int a, b;
    int ucln=1;
    printf("Nhap 2 so:");
    scanf("%d%d", &a, &b);
    if(b>a) {
        int tmp=a;
        a=b;
        b=tmp;
    }
    a=abs(a);
    b=abs(b);
    if(a==0&&b==0)
        printf("Khong co ucln, bcnn=0");
    else {
        for(int i=b; i>0; i--) {
            if(a%i==0&&b%i==0)
                ucln=i;
                break;
        }
        printf("ucln la: %d\n", ucln);
        printf("BCNN la: %d", a*b/ucln);
    }
    return 0;
}
